#include<stdio.h>
int main()
{
    int nvet,i,elem;
    int par=0, impar=0;
    printf("Digite o numero de elementos do vetor: ");
    scanf("%d", &nvet);
    int vet[nvet];
    for(i=0;i<nvet;i++){
        printf("Digite o elemento %d: ",i+1);
        scanf("%d",&vet[i]);
    }
    for(i=0;i<nvet;i++)
    {
        if (vet[i]%2==0){
            par++;
        }else{
            impar++;
        }
    }
    printf("Quantidade de elementos pares: %d\n",par);
    printf("Quantidade de elementos impares: %d\n",impar);
    return 0;
    
}
